generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum JobStatus {
  INIT                    
  WAITING_SELLER      
  SELECTED    
  ESCROW_PENDING          
  ESCROW_ACTIVE           
  COMPLETED             
  CANCELLED               
  DISPUTED                
}

model Job {
  id                String      @id @default(cuid())
  jobCommitment     String?     @unique

  description       String
  
  jobStatus         JobStatus   @default(INIT)
  
  buyerUserId       String
  buyerWallet      String
  
  sellerUserId      String?
  sellerWallet      String?

  arbitratorWallet  String?

  escrowId          String?     @unique

  amount            BigInt

  createdAt         DateTime    @default(now())
  expiresAt         DateTime 
  cancelledAt       DateTime?
}